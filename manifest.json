{
    "manifest_version": 2,
    "name": "Youtube ShowTitle",
    "version": "1.5",

    "description": "Show the video title in the Search box as it changes",
    "homepage_url": "",
    "icons": {
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png"
    },

    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],





    "content_scripts": [
        {
            "matches": [ "*://*.youtube.com/*" ],
            "js": [ "content/main.js" ]
        }
    ]
}

